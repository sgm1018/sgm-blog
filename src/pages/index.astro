---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/blog/PostCard.astro';
import SearchBar from '../components/blog/SearchBar.astro';
import Button from '../components/ui/Button.astro';
import Badge from '../components/ui/Badge.astro';
import Card from '../components/ui/Card.astro';
import { Code, BookOpen, Users, TrendingUp, ArrowRight, Star } from 'lucide-astro';
import { BlogService } from '../lib/blog-service';

// Obtener datos desde Supabase
let featuredPosts: any[] = [];
let recentPosts: any[] = [];
let categories: any[] = [];

try {
  // Obtener posts destacados
  featuredPosts = await BlogService.getFeaturedPosts(1);
  
  // Obtener posts recientes
  recentPosts = await BlogService.getPublishedPosts(3);
  
  // Obtener categorías
  categories = await BlogService.getCategories();
} catch (error) {
  console.error('Error fetching homepage data:', error);
  featuredPosts = [];
  recentPosts = [];
  categories = [];
}

// Usar el primer post destacado como hero
const featuredPost = featuredPosts[0] || null;

const stats = [
  { label: 'Artículos Publicados', value: '120+', icon: BookOpen },
  { label: 'Desarrolladores Leen', value: '15K+', icon: Users },
  { label: 'Tecnologías Cubiertas', value: '50+', icon: Code },
  { label: 'Proyectos Destacados', value: '25+', icon: Star }
];
---

<BaseLayout
  title="DevBlog - Desarrollo de Software y Tecnología"
  description="Blog especializado en desarrollo de software, tecnologías emergentes y mejores prácticas para desarrolladores modernos."
  keywords={['desarrollo software', 'programación', 'tecnología', 'blog desarrollo']}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary-600 via-primary-700 to-accent-600 text-white overflow-hidden">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
          Código, Innovación y
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-pink-400">
            Conocimiento
          </span>
        </h1>
        <p class="text-xl md:text-2xl text-blue-100 mb-8 leading-relaxed">
          Descubre las últimas tendencias en desarrollo de software, tutoriales prácticos 
          y mejores prácticas de la industria tech.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <Button href="/blog" size="lg" class="bg-white text-primary-600 hover:bg-gray-100">
            Explorar Artículos
            <ArrowRight size={20} class="ml-2" />
          </Button>
          <Button href="/about" variant="outline" size="lg" class="border-white text-white hover:bg-white/10">
            Sobre el Blog
          </Button>
        </div>
      </div>
    </div>
    
    <!-- Decorative Elements -->
    <div class="absolute top-0 right-0 -mt-20 -mr-20 w-80 h-80 bg-gradient-to-br from-white/10 to-transparent rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 -mb-32 -ml-32 w-96 h-96 bg-gradient-to-tr from-accent-500/20 to-transparent rounded-full blur-3xl"></div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="flex justify-center mb-4">
              <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-xl flex items-center justify-center">
                <stat.icon size={24} class="text-primary-600 dark:text-primary-400" />
              </div>
            </div>
            <div class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-2">
              {stat.value}
            </div>
            <div class="text-gray-600 dark:text-gray-400 text-sm">
              {stat.label}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Search Section -->
  <section class="py-12 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-4">
          ¿Qué te interesa aprender hoy?
        </h2>
        <p class="text-gray-600 dark:text-gray-400">
          Busca entre cientos de artículos sobre desarrollo, tecnología y programación
        </p>
      </div>
      <SearchBar />
    </div>
  </section>

  <!-- Featured Post Section -->
  <section class="py-16 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
            Artículo Destacado
          </h2>
          <p class="text-gray-600 dark:text-gray-400">
            El contenido más relevante y actualizado
          </p>
        </div>
        <Badge variant="success" size="md">
          <TrendingUp size={14} class="mr-1" />
          Trending
        </Badge>
      </div>
      
      {featuredPost ? (
        <PostCard post={featuredPost} featured={true} />
      ) : (
        <div class="text-center py-16">
          <h3 class="text-2xl font-semibold text-white mb-4">
            Bienvenido a DevBlog
          </h3>
          <p class="text-blue-100 mb-6">
            Los artículos destacados aparecerán aquí una vez que configures Supabase y tengas contenido.
          </p>
          <Button href="/blog" size="lg" class="bg-white text-primary-600 hover:bg-gray-100">
            Ver Blog
            <ArrowRight size={20} class="ml-2" />
          </Button>
        </div>
      )}
    </div>
  </section>

  <!-- Recent Posts Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
          Artículos Recientes
        </h2>
        <Button href="/blog" variant="outline">
          Ver Todos
          <ArrowRight size={16} class="ml-2" />
        </Button>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {recentPosts.length > 0 ? (
          recentPosts.map((post) => (
            <PostCard post={post} />
          ))
        ) : (
          <div class="col-span-full text-center py-16">
            <div class="w-24 h-24 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-6">
              <BookOpen size={32} class="text-gray-400" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              No hay artículos disponibles
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              Los artículos aparecerán aquí una vez que configures Supabase y tengas contenido.
            </p>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
          Explora por Categorías
        </h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Encuentra contenido especializado en las tecnologías y áreas que más te interesan
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {categories.length > 0 ? (
          categories.map((category) => (
            <Card hover={true} class="text-center">
              <div class="w-16 h-16 bg-primary-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <Code size={32} class="text-white" />
              </div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {category.name}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
                {category.description || 'Categoría de artículos'}
              </p>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500 dark:text-gray-400">
                  Ver artículos
                </span>
                <Button 
                  href={`/blog?category=${category.slug}`} 
                  variant="ghost" 
                  size="sm"
                  class="text-primary-600 dark:text-primary-400"
                >
                  Ver más →
                </Button>
              </div>
            </Card>
          ))
        ) : (
          <div class="col-span-full text-center py-16">
            <div class="w-24 h-24 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-6">
              <Code size={32} class="text-gray-400" />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              Categorías en construcción
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              Las categorías aparecerán aquí una vez que configures Supabase.
            </p>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-16 bg-gradient-to-r from-primary-600 to-accent-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Mantente Actualizado
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        Recibe los mejores artículos y recursos directamente en tu email
      </p>
      
      <form class="max-w-md mx-auto">
        <div class="flex flex-col sm:flex-row gap-3">
          <input
            type="email"
            placeholder="tu@email.com"
            class="flex-1 px-4 py-3 rounded-lg border-0 focus:ring-2 focus:ring-white/30 bg-white/90 text-gray-900 placeholder-gray-600"
            required
          />
          <Button type="submit" class="bg-white text-primary-600 hover:bg-gray-100">
            Suscribirse
          </Button>
        </div>
        <p class="text-blue-100 text-sm mt-3">
          No spam. Cancela cuando quieras.
        </p>
      </form>
    </div>
  </section>
</BaseLayout>