---
import { Share2, Twitter, Facebook, Linkedin, Link2, Mail } from 'lucide-astro';
import Button from '../ui/Button.astro';

export interface Props {
  title: string;
  url: string;
  excerpt?: string;
  class?: string;
}

const { title, url, excerpt = '', class: className = '' } = Astro.props;

// Codificar URLs para compartir
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
const encodedExcerpt = encodeURIComponent(excerpt);

const shareLinks = {
  twitter: `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
  email: `mailto:?subject=${encodedTitle}&body=${encodedExcerpt}%20${encodedUrl}`,
  whatsapp: `https://api.whatsapp.com/send?text=${encodedTitle}%20${encodedUrl}`,
  telegram: `https://t.me/share/url?url=${encodedUrl}&text=${encodedTitle}`,
};
---

<div class={`${className}`}>
  <!-- Botones de compartir en grid como cajitas -->
  <div class="grid grid-cols-2 gap-3">
    <!-- Twitter -->
    <a
      href={shareLinks.twitter}
      target="_blank"
      rel="noopener noreferrer"
      class="flex flex-col items-center justify-center p-4 rounded-xl bg-blue-50 hover:bg-blue-100 dark:bg-blue-900/20 dark:hover:bg-blue-900/30 border border-blue-200 dark:border-blue-700 text-blue-600 dark:text-blue-400 transition-all hover:scale-105"
      title="Compartir en Twitter"
    >
      <Twitter size={20} class="mb-2" />
      <span class="text-sm font-medium">Twitter</span>
    </a>

    <!-- Facebook -->
    <a
      href={shareLinks.facebook}
      target="_blank"
      rel="noopener noreferrer"
      class="flex flex-col items-center justify-center p-4 rounded-xl bg-blue-50 hover:bg-blue-100 dark:bg-blue-900/20 dark:hover:bg-blue-900/30 border border-blue-200 dark:border-blue-700 text-blue-700 dark:text-blue-300 transition-all hover:scale-105"
      title="Compartir en Facebook"
    >
      <Facebook size={20} class="mb-2" />
      <span class="text-sm font-medium">Facebook</span>
    </a>

    <!-- LinkedIn -->
    <a
      href={shareLinks.linkedin}
      target="_blank"
      rel="noopener noreferrer"
      class="flex flex-col items-center justify-center p-4 rounded-xl bg-blue-50 hover:bg-blue-100 dark:bg-blue-900/20 dark:hover:bg-blue-900/30 border border-blue-200 dark:border-blue-700 text-blue-800 dark:text-blue-200 transition-all hover:scale-105"
      title="Compartir en LinkedIn"
    >
      <Linkedin size={20} class="mb-2" />
      <span class="text-sm font-medium">LinkedIn</span>
    </a>

    <!-- Copiar enlace -->
    <button
      class="copy-link-btn flex flex-col items-center justify-center p-4 rounded-xl bg-gray-50 hover:bg-gray-100 dark:bg-gray-900/20 dark:hover:bg-gray-900/30 border border-gray-200 dark:border-gray-700 text-gray-600 dark:text-gray-400 transition-all hover:scale-105"
      title="Copiar enlace"
      data-url={url}
    >
      <Link2 size={20} class="mb-2" />
      <span class="text-sm font-medium">Copiar</span>
    </button>
  </div>
</div>

<!-- Modal para más opciones de compartir (móvil) -->
<div id="share-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden items-center justify-center p-4">
  <div class="bg-white dark:bg-gray-800 rounded-xl p-6 w-full max-w-sm">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
        Compartir artículo
      </h3>
      <button id="close-share-modal" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    
    <div class="grid grid-cols-2 gap-3">
      <!-- Twitter -->
      <a
        href={shareLinks.twitter}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center p-3 text-blue-500 bg-blue-50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/40 transition-colors"
      >
        <Twitter size={20} />
        <span class="ml-3 font-medium">Twitter</span>
      </a>

      <!-- Facebook -->
      <a
        href={shareLinks.facebook}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center p-3 text-blue-600 bg-blue-50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/40 transition-colors"
      >
        <Facebook size={20} />
        <span class="ml-3 font-medium">Facebook</span>
      </a>

      <!-- WhatsApp -->
      <a
        href={shareLinks.whatsapp}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center p-3 text-green-600 bg-green-50 dark:bg-green-900/20 rounded-lg hover:bg-green-100 dark:hover:bg-green-900/40 transition-colors"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.570-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
        </svg>
        <span class="ml-3 font-medium">WhatsApp</span>
      </a>

      <!-- Email -->
      <a
        href={shareLinks.email}
        class="flex items-center p-3 text-red-600 bg-red-50 dark:bg-red-900/20 rounded-lg hover:bg-red-100 dark:hover:bg-red-900/40 transition-colors"
      >
        <Mail size={20} />
        <span class="ml-3 font-medium">Email</span>
      </a>
    </div>

    <!-- Copiar enlace -->
    <button
      class="copy-link-modal-btn w-full mt-4 p-3 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors flex items-center justify-center"
      data-url={url}
    >
      <Link2 size={20} />
      <span class="ml-3 font-medium">Copiar enlace</span>
    </button>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Funcionalidad de copiar enlace
    const copyLinkBtns = document.querySelectorAll('.copy-link-btn');
    copyLinkBtns.forEach(btn => {
      btn.addEventListener('click', async () => {
        const htmlBtn = btn as HTMLElement;
        const url = htmlBtn.dataset.url;
        if (url) {
          try {
            await navigator.clipboard.writeText(url);
            
            // Feedback visual para el diseño de cajitas
            const originalContent = btn.innerHTML;
            btn.innerHTML = `
              <svg class="w-5 h-5 mb-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-sm font-medium text-green-600">¡Copiado!</span>
            `;
            btn.classList.add('bg-green-50', 'dark:bg-green-900/20', 'border-green-200', 'dark:border-green-700');
            btn.classList.remove('bg-gray-50', 'dark:bg-gray-900/20', 'border-gray-200', 'dark:border-gray-700');
            
            setTimeout(() => {
              btn.innerHTML = originalContent;
              btn.classList.remove('bg-green-50', 'dark:bg-green-900/20', 'border-green-200', 'dark:border-green-700');
              btn.classList.add('bg-gray-50', 'dark:bg-gray-900/20', 'border-gray-200', 'dark:border-gray-700');
            }, 2000);
          } catch (err) {
            console.error('Error al copiar:', err);
          }
        }
      });
    });
  });
</script>
