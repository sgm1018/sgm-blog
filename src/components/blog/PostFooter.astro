---
import type { BlogPost } from '../../types/blog.types';
import { formatDate } from '../../lib/utils';
import Badge from '../ui/Badge.astro';
import ShareButtons from './ShareButtons.astro';
import AuthorCard from './AuthorCard.astro';

export interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
---

<footer class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
  <!-- Tags del post -->
  {post.tags.length > 0 && (
    <div class="mb-8">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
        Etiquetas relacionadas
      </h3>
      <div class="flex flex-wrap gap-2">
        {post.tags.map((tag) => (
          <a
            href={`/blog?tag=${tag.slug}`}
            class="hover:scale-105 transition-transform"
          >
            <Badge variant="default" size="md" class="cursor-pointer hover:bg-primary-100 dark:hover:bg-primary-900">
              #{tag.name}
            </Badge>
          </a>
        ))}
      </div>
    </div>
  )}

  <!-- Informaci√≥n del autor -->
  <div class="mb-8">
    <AuthorCard author={post.author} />
  </div>

  <!-- Compartir post -->
  <div class="mb-8">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
      Compartir este art√≠culo
    </h3>
    <ShareButtons 
      title={post.title}
      url={`${Astro.site}blog/${post.slug}`}
      excerpt={post.excerpt}
    />
  </div>

  <!-- Informaci√≥n de actualizaci√≥n -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg text-sm text-gray-600 dark:text-gray-400">
    <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-6">
      <span>
        <strong>Publicado:</strong> {formatDate(post.publishedAt)}
      </span>
      {post.updatedAt !== post.publishedAt && (
        <span>
          <strong>√öltima actualizaci√≥n:</strong> {formatDate(post.updatedAt)}
        </span>
      )}
    </div>
    <div class="flex items-center gap-2">
      <span>‚è±Ô∏è {post.readingTime} min de lectura</span>
    </div>
  </div>

  <!-- Call to action -->
  <div class="mt-8 p-6 bg-gradient-to-r from-primary-50 to-primary-100 dark:from-primary-900/20 dark:to-primary-800/20 rounded-xl border border-primary-200 dark:border-primary-800">
    <div class="text-center">
      <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
        ¬øTe gust√≥ este art√≠culo?
      </h3>
      <p class="text-gray-600 dark:text-gray-400 mb-4">
        Suscr√≠bete para recibir m√°s contenido como este directamente en tu email.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center items-center">
        <input
          type="email"
          placeholder="tu@email.com"
          class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
        />
        <button
          type="submit"
          class="px-6 py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
        >
          Suscribirse
        </button>
      </div>
    </div>
  </div>

  <!-- Feedback -->
  <div class="mt-8">
    <div class="text-center p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
      <p class="text-gray-600 dark:text-gray-400 mb-3">
        ¬øEncontraste √∫til este art√≠culo?
      </p>
      <div class="flex justify-center space-x-4">
        <button
          class="flex items-center space-x-2 px-4 py-2 text-green-600 hover:text-green-700 hover:bg-green-50 dark:hover:bg-green-900/20 rounded-lg transition-colors feedback-button"
          data-feedback="positive"
        >
          <span>üëç</span>
          <span>S√≠, me ayud√≥</span>
        </button>
        <button
          class="flex items-center space-x-2 px-4 py-2 text-red-600 hover:text-red-700 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors feedback-button"
          data-feedback="negative"
        >
          <span>üëé</span>
          <span>No mucho</span>
        </button>
      </div>
      <div id="feedback-message" class="mt-3 text-sm text-gray-500 dark:text-gray-400 hidden"></div>
    </div>
  </div>
</footer>

<script>
  // Manejar feedback
  document.addEventListener('DOMContentLoaded', () => {
    const feedbackButtons = document.querySelectorAll('.feedback-button');
    const feedbackMessage = document.getElementById('feedback-message');
    
    feedbackButtons.forEach(button => {
      button.addEventListener('click', () => {
        const feedback = button.getAttribute('data-feedback');
        
        // Aqu√≠ podr√≠as enviar el feedback a tu API
        // fetch('/api/feedback', { method: 'POST', body: JSON.stringify({ feedback, postSlug: 'current-post-slug' }) })
        
        // Mostrar mensaje de agradecimiento
        if (feedbackMessage) {
          feedbackMessage.textContent = feedback === 'positive' 
            ? '¬°Gracias por tu feedback positivo! üéâ' 
            : 'Gracias por tu feedback. Trabajaremos para mejorar nuestro contenido. üí™';
          feedbackMessage.classList.remove('hidden');
        }
        
        // Deshabilitar botones
        feedbackButtons.forEach(btn => {
          (btn as HTMLButtonElement).disabled = true;
          btn.classList.add('opacity-50', 'cursor-not-allowed');
        });
      });
    });

    // Manejar suscripci√≥n
    const subscribeForm = document.querySelector('form');
    if (subscribeForm) {
      subscribeForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const form = e.target as HTMLFormElement;
        const formData = new FormData(form);
        const email = formData.get('email') as string;
        
        // Aqu√≠ podr√≠as enviar el email a tu API de suscripci√≥n
        // await fetch('/api/subscribe', { method: 'POST', body: JSON.stringify({ email }) });
        
        alert('¬°Gracias por suscribirte!');
      });
    }
  });
</script>
